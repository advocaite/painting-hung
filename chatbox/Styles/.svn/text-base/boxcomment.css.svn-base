.tborder
    {
    background: none repeat scroll 0 0 #EEEEEE;
    border: 1px solid #E5E5E5;
    color:  #000000;
    background-color: transparent;
    background-image: url(../Images/chatbox.jpg);
    }

.alt2, .alt2Active
    {
    background: none repeat scroll 0 0 #FFFFFF;
    border: 1px solid #DBDBDB;
    border-radius: 5px 5px 5px 5px;
    color:  #333333;
    }

.alt1, .alt1Active
    {
    background: none repeat scroll 0 0 #FFFFFF;
    border: 1px solid #DBDBDB;
    border-radius: 5px 5px 5px 5px;
    color:  #333333;
    width:  100%;
    height: 300px;
    line-height: 15px;
    background-color: transparent;
    }

.divError
    {
    /* background-color: #66ff88; */
    width:  98%;
    height: 20px;
    margin: 0px;
    margin-left: 2px;
    text-align: center;
    padding-top: 10px;
    padding-bottom: 2px;
    border-top: 2px solid #de7a7b;
    border-bottom: 2px solid #de7a7b;
    background: url("../Images/notice-alert.png") no-repeat scroll 14px 2px #E6C0C0;
    }

/* Scroll bar */
#scrollArea
    {
    position: absolute;
    right: 12px;
    top:   12px;
    height: 315px;
    width: 8px;
    overflow: hidden;
    background-color: #F0F8FF;
    z-index: 96;
    }

/* Scroller */
#scroller
    {
    position: absolute;
    top: -1px;
    width: 8px;
    background-color: #d0f3ff;
    right: 0px;
    }